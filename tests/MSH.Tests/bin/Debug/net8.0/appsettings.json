{
  "ConnectionStrings": {
    "DefaultConnection": "${CONNECTION_STRING}"
  },
  "Backup": {
    "IntervalHours": 24,
    "RetentionDays": 30,
    "Directory": "/app/backups"
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "Matter": {
    "SdkPath": "/matter",
    "ChipToolPath": "/usr/local/bin/chip-tool"
  }
}
