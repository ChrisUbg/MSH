@* Minimal _LoginPartial for Blazor Server Identity UI *@
@using Microsoft.AspNetCore.Identity
@using Microsoft.AspNetCore.Identity.UI
@using Microsoft.AspNetCore.Authorization
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

@if (User.Identity.IsAuthenticated)
{
    <form id="logoutForm" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="/" method="post">
        <button type="submit" class="btn btn-link">Logout</button>
    </form>
}
else
{
    <a class="btn btn-link" href="/Identity/Account/Login">Login</a>
    <a class="btn btn-link" href="/Identity/Account/Register">Register</a>
} 